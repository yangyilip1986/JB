<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res/com.jiubang.p2p"
    xmlns:circleProgress="http://schemas.android.com/apk/res/com.jiubang.p2p"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_boder"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp" >

        <!-- 第一行内容 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="理财计划A"
            android:textColor="@color/plan_abc_black"
            android:textSize="15sp" />

        <!-- 第二行内容 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_interest_rate_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:textColor="@color/app_orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:text="%"
                        android:textColor="@color/app_orange"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="年化收益率"
                    android:textColor="@color/app_font_light"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_invest_period_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起投金额："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_minAddAmount_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>
            </LinearLayout>

            <com.jiubang.p2p.view.TasksCompletedView
                android:id="@+id/tcv_progress_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tc:circleColor="@color/app_blue"
                tc:radius="25dp"
                tc:ringColor="@color/app_blue"
                tc:strokeWidth="3dp"
                tc:word="加入" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/bg_boder"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="9dp" >

        <!-- 第一行内容 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="理财计划B"
            android:textColor="@color/plan_abc_black"
            android:textSize="15sp" />

        <!-- 第二行内容 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_interest_rate_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:textColor="@color/app_orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:text="%"
                        android:textColor="@color/app_orange"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="left|bottom"
                    android:text="年化收益率"
                    android:textColor="@color/app_font_light"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_invest_period_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起投金额："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_minAddAmount_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>
            </LinearLayout>

            <com.jiubang.p2p.view.TasksCompletedView
                android:id="@+id/tcv_progress_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tc:circleColor="@color/app_blue"
                tc:radius="25dp"
                tc:ringColor="@color/app_blue"
                tc:strokeWidth="3dp"
                tc:word="加入" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_boder"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="9dp" >

        <!-- 第一行内容 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="理财计划C"
            android:textColor="@color/plan_abc_black"
            android:textSize="15sp" />

        <!-- 第二行内容 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_interest_rate_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:textColor="@color/app_orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:text="%"
                        android:textColor="@color/app_orange"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="left|bottom"
                    android:text="年化收益率"
                    android:textColor="@color/app_font_light"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_invest_period_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="起投金额："
                        android:textColor="@color/app_font_light"
                        android:textSize="@dimen/font_hint" />

                    <TextView
                        android:id="@+id/tv_minAddAmount_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_font"
                        android:textSize="@dimen/font_hint" />
                </LinearLayout>
            </LinearLayout>

            <com.jiubang.p2p.view.TasksCompletedView
                android:id="@+id/tcv_progress_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tc:circleColor="@color/app_blue"
                tc:radius="25dp"
                tc:ringColor="@color/app_blue"
                tc:strokeWidth="3dp"
                tc:word="加入" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="7.5dp"
        android:background="@color/app_divide_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:background="@drawable/bg_boder"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="8"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="10000"
            android:textColor="@color/app_font_dark"
            android:textSize="@dimen/font_app" />

        <TextView
            android:id="@+id/tv_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:text="收益计算"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/font_app" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" >

            <com.jiubang.p2p.widget.CircleProgressBar
                android:id="@+id/cpb_percentage_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                circleProgress:circleProgressColor="@color/app_blue"
                circleProgress:circleProgressStrokeWidth="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="理财计划A"
                android:textColor="@color/app_font"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" >

            <com.jiubang.p2p.widget.CircleProgressBar
                android:id="@+id/cpb_percentage_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                circleProgress:circleProgressColor="@color/app_blue"
                circleProgress:circleProgressStrokeWidth="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="理财计划B"
                android:textColor="@color/app_font"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" >

            <com.jiubang.p2p.widget.CircleProgressBar
                android:id="@+id/cpb_percentage_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                circleProgress:circleProgressColor="@color/app_blue"
                circleProgress:circleProgressStrokeWidth="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="理财计划C"
                android:textColor="@color/app_font"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_amount_total_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_font_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_amount_total_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_font_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_amount_total_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_font_dark"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/app_divide_grey" />

    <LinearLayout
        android:id="@+id/ll_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/top"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="继续拖动 查看详情"
            android:textColor="@color/font_gray" />
    </LinearLayout>

</LinearLayout>