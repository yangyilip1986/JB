<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e4e8e9"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="总资产(元)"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="投资项目(元)"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="账户余额(元)"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="积分(分)"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_FirstDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TotalFirstDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TenderFirstDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccountFirstDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccumulateFirstDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_LastDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TotalLastDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TenderLastDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccountLastDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccumulateLastDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="变化值"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TotalChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_TenderChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccountChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_AccumulateChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="#6a6a6a"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cash_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:gravity="center"
            android:textColor="#6a6a6a"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>