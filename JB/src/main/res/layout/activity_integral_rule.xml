<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llybuttom"
        android:layout_below="@+id/headLinear"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_text1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left"
                android:paddingRight="@dimen/page_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/text_drawable"
                    android:gravity="center_vertical"
                    android:text="如何获得积分？"
                    android:textColor="@color/app_font_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:src="@drawable/down_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_bg" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/app_integral_text_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/view_list" />

            <RelativeLayout
                android:id="@+id/rl_text2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left"
                android:paddingRight="@dimen/page_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/text_drawable"
                    android:gravity="center_vertical"
                    android:text="积分如何使用？"
                    android:textColor="@color/app_font_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:src="@drawable/down_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1、积分可兑换九邦信投网现金券及实物商品等;"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="2、积分兑换九邦信投网现金券规则：具体见积分商城;\n注：现金券使用见现金券具体使用规则"
                    android:textColor="@color/app_integral_text_gray" />

                <TextView
                    android:id="@+id/tv_integral_mall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="进入积分商城>>"
                    android:textColor="#3882d7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="3.积分可抵扣提现手续费用：具体见提现规则;"
                    android:textColor="@color/app_integral_text_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/view_list" />

            <RelativeLayout
                android:id="@+id/rl_text3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left"
                android:paddingRight="@dimen/page_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/text_drawable"
                    android:gravity="center_vertical"
                    android:text="积分是否有有效期？"
                    android:textColor="@color/app_font_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:src="@drawable/down_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1、积分具有有效期，在每年6月30日和12月31日将消除当日积分余额的25%。\n(例：2015年6月30日，当日积分余额10000分，积分将消除2500积分)"
                    android:textColor="@color/app_integral_text_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/view_list" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>