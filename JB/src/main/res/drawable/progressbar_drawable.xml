<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="@color/app_bg"
                android:centerY="0.75"
                android:endColor="@color/app_bg"
                android:startColor="@color/app_bg" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/app_blue"
                    android:centerY="0.75"
                    android:endColor="@color/app_blue"
                    android:startColor="@color/app_blue" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/app_blue"
                    android:startColor="@color/app_blue" />
            </shape>
        </clip>
    </item>

</layer-list>